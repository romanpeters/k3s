{
  "extends": ["config:base"],
  "timezone": "UTC",
  "schedule": ["every week"],
  "labels": ["dependencies", "docker"],
  "enabledManagers": ["kubernetes"],
  "kubernetes": {
    "fileMatch": [
      "apps/.+\\.ya?ml$",
      "clusters/.+\\.ya?ml$",
      "infrastructure/.+\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
